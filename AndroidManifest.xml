<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tr.nearfood"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_near_food"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.tr.nearfood.activity.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tr.nearfood.activity.Register" >
        </activity>
        <activity android:name="com.tr.nearfood.activity.RestaurantCatagory" >
        </activity>
        <activity
            android:name="com.tr.nearfood.activity.RestaurantList"
            android:configChanges="orientation"
            android:hardwareAccelerated="false"
            android:windowSoftInputMode="adjustPan|adjustResize|stateVisible" >
        </activity>
        <activity android:name="com.tr.nearfood.activity.Login" >
        </activity>
        <activity android:name="com.tr.nearfood.activity.RestaurantProfile" >
        </activity>
        <activity android:name="com.tr.nearfood.activity.LoginWithFacebook" >
        </activity>
        <activity android:name="com.tr.nearfood.activity.ChooseLoginMethod" >
        </activity>
        <activity android:name="com.facebook.LoginActivity" />
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
    </application>

</manifest>