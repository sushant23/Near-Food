<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:background="@color/dark_white"
    android:paddingBottom="10dp" >

    <Button
        android:id="@+id/buttonManageOrders"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_gradiant"
        android:text="MANAGE ORDERS"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonManageMenus"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/buttonManageOrders"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_gradiant"
        android:text="MANAGE MENU"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonManageRestaurantDetails"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/buttonManageMenus"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_gradiant"
        android:text="MANAGE RESTAURANT DETAILS"
        android:textColor="@color/white" />

</RelativeLayout>