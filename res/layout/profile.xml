<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/background"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/LinearlayoutRestaurantDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textviewReataurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reataurant Name" />

        <TextView
            android:id="@+id/textviewReataurantStreetAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reataurant Street Address"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textviewReataurantCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reataurant City Name"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewRowResturantListDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Distance" />

    <View
        android:id="@+id/seperator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/LinearlayoutRestaurantDetail"
        android:layout_marginTop="5dp"
        android:background="#000" />

    <LinearLayout
        android:id="@+id/linearlayoutuserDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seperator"
        android:orientation="horizontal"
        android:weightSum="3" >

        <EditText
            android:id="@+id/edittextSenderName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#AAFFFFFF"
            android:hint="Name" />

        <EditText
            android:id="@+id/edittextSenderEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#AAFFFFFF"
            android:hint="email" />

        <EditText
            android:id="@+id/edittextSenderPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#AAFFFFFF"
            android:hint="Phone" />
    </LinearLayout>

    <EditText
        android:id="@+id/edittextSendmessege"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/linearlayoutuserDetails"
        android:background="#AAFFFFFF"
        android:hint="Messege" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/edittextSendmessege"
        android:background="#008F00"
        android:text="Send"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edittextSendmessege"
        android:layout_below="@+id/buttonSend" >

        <ImageButton
            android:id="@+id/imageButtonFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/circle"
            android:src="@drawable/ic_facebook" />

        <ImageButton
            android:id="@+id/imagetripAdvisor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imageButtonFacebook"
            android:layout_margin="10dp"
            android:background="@drawable/circle"
            android:src="@drawable/ic_tripadvisor" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/edittextSendmessege"
        android:layout_below="@+id/buttonSend"
        android:gravity="right"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonSetTimeandDate"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:background="#008F00"
            android:text="SET DATE AND TIME"
            android:textSize="10sp" />

        <Button
            android:id="@+id/buttonChooseMenu"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:background="#008F00"
            android:text="CHOOSE MENU"
            android:textSize="10sp" />

        <Button
            android:id="@+id/buttonReserveTable"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:background="#008F00"
            android:text="RESERVE TABLE"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>