<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relLayoutSearchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <AutoCompleteTextView
            android:id="@+id/editTextSearchResturantLists"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
           
            android:background="#AAFFFFFF"
            android:paddingRight="45dp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/ButtonSearchAddressGoogleMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/editTextSearchResturantLists"
            android:background="@drawable/button_gradiant"
            android:layout_alignBottom="@+id/editTextSearchResturantLists"
            android:padding="5dp"
            android:text="SEARCH"
            android:textColor="@color/white" />
    </RelativeLayout>

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relLayoutSearchContainer"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <Button
        android:id="@+id/buttonAadLocationFromGmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/map"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/button_gradiant"
        android:padding="5dp"
        android:text="Set Location"
        android:textColor="@color/white" />

</RelativeLayout>