<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <ImageButton
        android:id="@+id/ibTakeAway"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape"
        android:scaleType="fitXY"
        android:src="@drawable/icon_takeawaylarge" />

    <ImageButton
        android:id="@+id/ibTable"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/buttonSuscribe"
        android:background="@drawable/shape"
        android:scaleType="fitXY"
        android:src="@drawable/icon_tablelarge" />

    <ImageButton
        android:id="@+id/buttonSuscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ibTable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle"
        android:src="@drawable/icon_subscribe" />

    <ImageButton
        android:id="@+id/ibDelivery"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/buttonSuscribe"
        android:background="@drawable/shape"
        android:scaleType="fitXY"
        android:src="@drawable/icon_delvierlarge" />

</RelativeLayout>