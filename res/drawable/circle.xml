<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="oval">
            <solid android:color="@color/button_click_color" />

            <stroke android:width="1dp" android:color="@color/button_click_color" />

            <corners android:radius="3dp" />
        </shape></item>
    <item><shape android:shape="oval">
            <gradient android:angle="270" android:endColor="@color/button_color" android:startColor="@color/button_color" />

            <stroke android:width="1dp" android:color="@color/button_color" />

            <corners android:radius="4dp" />
        </shape></item>

</selector>